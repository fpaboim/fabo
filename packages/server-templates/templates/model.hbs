import mongoose from 'mongoose'
import schema from './schema.js'
{{#if hasHooks}}
import hooks from './schemaHooks.js'
{{/if}}

const {{name}}Schema = new mongoose.Schema(schema)
{{#if hasHooks}}
// hooks
///////////////////////////////////////////////////////////////////////////////
for (let hook in hooks) {
  for (let hookmethod in hooks[hook]) {
    {{name}}Schema[hook](hookmethod, hooks[hook][hookmethod])
  }
}
{{/if}}

const {{name}} = mongoose.model('{{name}}', {{name}}Schema)
export default {{name}}



