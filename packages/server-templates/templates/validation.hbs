  {{#if (buildSchemas_hasValidationEntries data)}}
  {{name}}: {
    {{#if (buildSchemas_isRequired data)}}
    required: true,
    {{else}}
    required: false,
    {{/if}}
    validations: [
    {{#data}}
      {{buildSchemas_parseValidationEntry this}}
