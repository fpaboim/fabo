{
  "name": "fabo",
  "version": "1.0.6",
  "description": "Serverless Express/MongoDB API Generator - beta",
  "main": "./index.js",
  "type": "module",
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "concurrently": "^6.5.1",
    "package-preview": "^4.0.0",
    "wait-on": "^6.0.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fpaboim/fabo.git"
  },
  "bin": {
    "@fpaboim/fabo": "./packages/cli/bin/fabo.js",
    "fabo": "./packages/cli/bin/fabo.js"
  },
  "scripts": {
    "test": "preview && node tests/test.js"
  },
  "engines": {
    "node": ">=14"
  },
  "author": "",
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "client/*",
      "server/*",
      "packages/*/node_modules/*",
      "docs/*"
    ],
    "watch": [
      "packages/*",
      "./models/*",
      "./shared/*"
    ],
    "ext": ".js, .json, .yaml, .hbs"
  },
  "dependencies": {
    "@fabo/cli": "workspace:*",
    "@fabo/server-core": "workspace:*",
    "@fabo/server-templates": "workspace:*",
    "chalk": "^4.1.2",
    "express-rate-limit": "^5.5.1"
  }
}
